@model IEnumerable<dynamic>

@{
    ViewData["Title"] = "Menú de Platos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">Menú de Platos</h2>

    <div class="alert alert-info">
        <p>Diagnóstico:</p>
        <p>Model is null: @(Model == null)</p>
        @if (Model != null)
        {
            <p>Model count: @Model.Count()</p>
        }
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-warning">
            No se encontraron platos para mostrar.
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">@item.NombrePlato</h5>
                            <p>Precio: $@item.Precio</p>
                            <p>ID: @item.PlatoId</p>
                            <p>Categoría: @item.NombreCategoria</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>