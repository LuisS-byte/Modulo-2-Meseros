@model Modulo_2_Meseros.Models.DTO.LoginDTO
@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login Form</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
    <style>
        body {
            background: #252836;
            font-family: 'Poppins', sans-serif;
        }

        .wrapper {
            max-width: 400px;
            margin: 80px auto;
            padding: 40px 20px;
            background-color: #ffffff;
            border-radius: 15px;
            box-shadow: 10px 10px 20px #1c1e2a, -10px -10px 20px #2e3246;
        }

        .logo img {
            width: 80px;
            height: 80px;
            object-fit: cover;
            border-radius: 50%;
            box-shadow: 0px 0px 3px #3C3F58, 0px 0px 0px 5px #4A4E69, 8px 8px 15px #4A4E69, -8px -8px 15px #4A4E69;
        }

        .form-control {
            border: none;
            border-radius: 20px;
            box-shadow: inset 5px 5px 10px #bbbcc2, inset -5px -5px 10px #ffffff;
            background-color: #f3f3f3;
            color: #333;
        }

        .btn {
            background-color: #FF4C60;
            border-radius: 25px;
            box-shadow: 3px 3px 6px #b1b1b1, -3px -3px 6px #fff;
            color: #fff;
            font-weight: bold;
        }

            .btn:hover {
                background-color: #E04355;
            }

        .text-link {
            color: #FF4C60;
            text-decoration: none;
        }

            .text-link:hover {
                color: #E04355;
            }

        .validation-summary-errors {
            color: #dc3545;
            border-radius: 10px;
            padding: 10px;
            margin-bottom: 15px;
        }
    </style>
</head>
<body>
    <div class="wrapper text-center">
        <div class="logo mb-3">
            <img src="https://img.freepik.com/vector-gratis/ilustracion-dibujos-animados-camareros-dibujados-mano_23-2150773323.jpg?semt=ais_hybrid" alt="Logo Mesero">
        </div>
        <h3 class="name">Modulo-2-Meseros</h3>

        <form asp-action="Login" method="post" class="mt-4">
            <div asp-validation-summary="ModelOnly" class="validation-summary-errors"></div>

            <div class="mb-3">
                <div class="input-group">
                    <span class="input-group-text bg-light">
                        <i class="far fa-envelope"></i>
                    </span>
                    <input asp-for="Correo" class="form-control" placeholder="Correo electrónico" />
                </div>
                <span asp-validation-for="Correo" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <div class="input-group">
                    <span class="input-group-text bg-light">
                        <i class="fas fa-key"></i>
                    </span>
                    <input asp-for="Clave" type="password" class="form-control" placeholder="Contraseña" />
                </div>
                <span asp-validation-for="Clave" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary w-100">Login</button>
        </form>
    </div>

    <script>
                document.addEventListener('DOMContentLoaded', function() {
            var token = '@Html.Raw(ViewData["Token"])'; 

            console.log("Token recibido desde ViewData:", token);

            if (token && token !== 'null' && token.trim() !== '') {
                localStorage.setItem('authToken', token);
                console.log("Token guardado en localStorage:", localStorage.getItem('authToken'));
                window.location.href = '@Url.Action("Index", "Home")';
            } else {
                console.log("No se recibió un token válido.");
            }
        });


    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>